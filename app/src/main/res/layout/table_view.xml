<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layoutBg"
    android:layout_margin="0dp"
    android:forceDarkAllowed="false">

    <ImageView
        android:id="@+id/tableImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="visible"
        android:src="@drawable/four_chair" />
    <ImageView
        android:id="@+id/takeAwayImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/parcel" />

    <TextView
        android:id="@+id/userName"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/takeAwayImg"
        android:layout_centerHorizontal="true"
        android:text="" />
    <TextView
        android:id="@+id/mobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_centerHorizontal="true"
        android:text="" />

    <TextView
        android:id="@+id/status"
        android:textColor="@color/PrimaryColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobileNumber"
        android:layout_centerHorizontal="true"
        android:text="" />

    <TextView
        android:id="@+id/orderId"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/regularColor"
        android:layout_margin="20dp"
        android:text="" />

    <TextView
        android:id="@+id/tableNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableImg"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Table No 1"
        android:textStyle="bold"
        android:textColor="@color/regularColor" />

    <ImageView
        android:id="@+id/bookOrNot"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/unavailable" />

    <View
        android:layout_width="150dp"
        android:layout_height="0.7dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tableNo"
        android:layout_centerHorizontal="true"/>

    <View
        android:layout_width="0.7dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:background="@color/black"
        android:layout_toEndOf="@id/tableImg"
        android:layout_centerVertical="true"
        />

</RelativeLayout>